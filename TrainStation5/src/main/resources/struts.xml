<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />

	<package name="json-default-package" extends="struts-default">
		<result-types>
			<result-type name="json" class="org.apache.struts2.json.JSONResult" />
		</result-types>
		<interceptors>
			<interceptor name="json"
				class="org.apache.struts2.json.JSONInterceptor" />
		</interceptors>
	</package>
	<package name="default" extends="struts-default,json-default-package"
		namespace="/">
		<!--<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>-->
		<action name="login" class="controllers.LoginAction">
			<result name="PHC"> <!--type="tiles"-->PHC.jsp</result>
			<result name="Controller"> <!--type="tiles"-->StationController.jsp</result>
			<result name="Driver"> <!--type="tiles"-->TrainDriver.jsp</result>
			<result name="error">index.jsp</result>
		</action>

		<action name="add" class="controllers.PackageAction" method="add">
			<result name="success" type="chain">index</result>
			<result name="input" type="chain">index</result>
		</action>

		<action name="delete" class="controllers.PackageAction" method="delete">
			<result name="success" type="chain">index</result>
		</action>

		<action name="edit" class="controllers.PackageAction" method="edit">
			<result name="success" type="chain">index</result>
		</action>

		<action name="mapa" class="controllers.MapaAction" method="execute">
			<result name="success">mapa.jsp</result>
		</action>

		<action name="list1" class="controllers.PackageAction" method="list">
			<result name="success" type="chain">index</result>
		</action>

		<action name="list2" class="controllers.TrainAction" method="list">
			<result name="success" type="chain">index</result>
		</action>

		<action name="index" class="controllers.PackageAction">
			<result name="input">/packages.jsp</result>
			<result name="success">packages.jsp</result>
		</action>
		<action name="JSONAction" class="controllers.JSONAction">
			<result type="json" />
		</action>
		<action name="sendPackage" class="controllers.SendPackage">
			<result name="success">SendPackages.jsp</result>
		</action>
	</package>
</struts>