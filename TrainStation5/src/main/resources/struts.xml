<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.custom.i18n.resources" value="global" />

	<package name="json-default-package" extends="struts-default">
		<result-types>
			<result-type name="json" class="org.apache.struts2.json.JSONResult" />
		</result-types>
		<interceptors>
			<interceptor name="json"
				class="org.apache.struts2.json.JSONInterceptor" />
		</interceptors>
	</package>
	<package name="default" extends="struts-default,json-default-package" namespace="/">
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<action name="login" class="controllers.LoginAction">
			<result name="PHC"> <!--type="tiles" -->PHC.jsp</result>
			<result name="Controller"> <!--type="tiles" -->StationController.jsp</result>
			<result name="Driver"> <!--type="tiles" -->TrainDriver.jsp</result>
			<result name="error">Login.jsp</result>
		</action>
		<action name="addPackage" class="controllers.PackageAction" method="add">
			<result name="success"> <!--type="tiles" -->PHC.jsp</result>
		</action>
		<action name="editUser" class="controllers.UserAction" method="edit">
			<result name="success"> <!--type="tiles" -->Login.jsp</result>
			<result name="error">Settings.jsp</result>
		</action>
		<action name="JSONAction" class="controllers.JSONAction">
			<result type="json" />
		</action>
		<action name="JSONActionTrain" class="controllers.JSONActionTrain">
			<result type="json" />
		</action>
		<!--<action name="locale" class="controllers.LocaleAction">
			<result name="SUCCESS">Login.jsp</result>
		</action>-->
		<action name="locale" class="controllers.LocaleAction">
			<result name="success" type="redirectAction">
				<param name="actionName">${referer}</param>
			</result>
			<result name="LOGIN">Login.jsp</result>
		</action>
	</package>
</struts>