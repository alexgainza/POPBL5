<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />

	<package name="default" extends="struts-default" namespace="/">
		<action name="login" class="controllers.LoginAction">
			<result name="success">packages.jsp</result>
			<result name="error">index.jsp</result>
		</action>

		<action name="add" class="controllers.PackageAction" method="add">
			<result name="success" type="chain">index</result>
			<result name="input" type="chain">index</result>
		</action>

		<action name="delete" class="controllers.PackageAction" method="edit">
			<result name="success" type="chain">index</result>
		</action>

		<action name="delete" class="controllers.PackageAction" method="delete">
			<result name="success" type="chain">index</result>
		</action>

		<action name="list1" class="controllers.PackageAction" method="list">
			<result name="success" type="chain">index</result>
		</action>
		<action name="list2" class="controllers.TrainAction" method="list">
			<result name="success" type="chain">index</result>
		</action>
		<action name="index" class="controllers.PackageAction">
			<result name="input">/packages.jsp</result>
			<result name="success">packages.jsp</result>
		</action>
	</package>
</struts>